<% if flash_messages.present? %>
  <div id="active-admin-flash-messages" class="absolute inset-x-0 group-[.is-out]:-inset-y-24 px-2.5 lg:px-5 mb-8 animate-appear-then-fade">
    <% flash_messages.each do |type, message| %>
      <% if type == "error" %>
        <div id="error-flash" class="flex items-center gap-3 p-4 mb-2 rounded-lg bg-red-50 text-red-800 dark:bg-red-800 dark:text-red-300 animate-appear-then-fade" role="alert" >
          # <svg class="w-5 h-5 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z"/></svg>
          <%= heroicon "check-circle", variant: :solid, class: "shrink-0" %>
          <%= message %>
          <%= heroicon "x-circle", variant: :solid, class: "shrink-0" %>
        </div>
      <% elsif type == "alert" %>
        <div id="alert-flash" class="flex items-center gap-3 p-4 mb-2 rounded-lg bg-yellow-50 text-yellow-800 dark:bg-yellow-800 dark:text-yellow-300 animate-appear-then-fade" role="alert">
          <svg class="w-5 h-5 shrink-0 rtl:-scale-x-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/></svg>
          <%= message %>
          <%#= heroicon "check-circle", variant: :solid, class: "shrink-0" %>
          <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-blue-50 text-blue-500 rounded-lg focus:ring-2 focus:ring-blue-400 p-1.5 hover:bg-blue-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-blue-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-flash" aria-label="Close">
              <span class="sr-only">Close</span>
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
              </svg>
          </button>
        </div>
      <% elsif type == "notice" %>
        <div id="notice-flash" class="flex items-center gap-3 p-4 mb-2 rounded-lg bg-green-50/50 text-green-800 dark:bg-green-800/95 dark:text-green-400 animate-appear-then-fade" role="alert">
          <svg class="w-5 h-5 shrink-0 rtl:-scale-x-100" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20"><path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/></svg>
          <%= message %>
          <%#= heroicon "x-circle", variant: :solid, class: "shrink-0 justify-end", data: { dismiss_target: "notice-flash" } %>
          <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700" data-dismiss-target="#notice-flash" aria-label="Close">
            <span class="sr-only">Close</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
          </button>
        </div>
      <% end %>
    <% end %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const flashMessageContainer = document.getElementById('active-admin-flash-messages');
      const flashMessageElements = flashMessageContainer.querySelectorAll('.animate-appear-then-fade');

      flashMessageElements.forEach(function(message) {
        message.addEventListener('animationend', function(e) {
          if (e.animationName === 'appear-then-fade') {
            flashMessageContainer.remove();
            this.remove();
          }
        });
      });
    });
  </script>
<% end %>


