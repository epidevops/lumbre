            <span><%= t('header.specialty_cocktails') %></span>
          <% end %>

          <%= link_to '#menu-section-subtitle-non-alcoholic-specialties', class: "-mx-3 flex items-center gap-x-4 rounded-2xl px-6 py-4 text-lg font-semibold text-siam-50 hover:text-rope-400 hover:bg-gradient-to-r hover:from-siam-800/50 hover:to-siam-800/30 transition-all duration-300 active:scale-98 group", data: { controller: 'scroll-to', action: 'toggle#toggleMobileMenuItems' } do %>
