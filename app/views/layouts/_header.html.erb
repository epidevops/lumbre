              </div>
              <div class="flex-auto">
                <%= link_to "#menu", class: "block font-semibold link-primary cursor-pointer", data: { controller: 'scroll-to', action: 'toggle#toggleDropdownItem' } do %>
                  <%#= t('header.menu') %>
                  Our Food Offerings
                  <span class="absolute inset-0"></span>
                <% end %>
                <p class="mt-1 text-sm text-siam-600"><%= t('header.menu_description') %></p>
              </div>
            </div>
