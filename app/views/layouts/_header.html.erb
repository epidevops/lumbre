              <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-rope-600/20 flex items-center justify-center group-hover:bg-rope-600/30 transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rope-400">
                  <circle cx="12" cy="12" r="10"/>
                  <line x1="12" y1="16" x2="12" y2="12"/>
                  <line x1="12" y1="8" x2="12.01" y2="8"/>
                </svg>
              </div>
              <span><%= t('header.about') %></span>
            <% end %>
          <% end %>

          <% if Flipper.enabled?(:enable_gallery) %>
            <%= link_to '#gallery', class: "-mx-3 flex items-center gap-x-4 rounded-2xl px-6 py-4 text-lg font-semibold text-siam-50 hover:text-rope-400 hover:bg-gradient-to-r hover:from-siam-800/50 hover:to-siam-800/30 transition-all duration-300 active:scale-98 group", data: { controller: 'scroll-to', action: 'toggle#toggleMobileMenuItems' } do %>
              <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-rope-600/20 flex items-center justify-center group-hover:bg-rope-600/30 transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rope-400">
                  <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
                </svg>
              </div>
              <span><%= t('header.gallery') %></span>
            <% end %>
          <% end %>

          <!-- Menu section with icon -->
          <%= link_to '#menu', class: "-mx-3 flex items-center gap-x-4 rounded-2xl px-6 py-4 text-lg font-semibold text-siam-50 hover:text-rope-400 hover:bg-gradient-to-r hover:from-siam-800/50 hover:to-siam-800/30 transition-all duration-300 active:scale-98 group", data: { controller: 'scroll-to', action: 'toggle#toggleMobileMenuItems' } do %>
            <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-rope-600/20 flex items-center justify-center group-hover:bg-rope-600/30 transition-all duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-rope-400">
                <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/>
              </svg>
            </div>
            <span><%= t('header.menu') %></span>
          <% end %>

          <%= link_to '#menu-section-title-beverages', class: "-mx-3 flex items-center gap-x-4 rounded-2xl px-6 py-4 text-lg font-semibold text-siam-50 hover:text-rope-400 hover:bg-gradient-to-r hover:from-siam-800/50 hover:to-siam-800/30 transition-all duration-300 active:scale-98 group", data: { controller: 'scroll-to', action: 'toggle#toggleMobileMenuItems' } do %>
            <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-rope-600/20 flex items-center justify-center group-hover:bg-rope-600/30 transition-all duration-300">
