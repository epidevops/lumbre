              </svg>
            </div>
            <span><%= t('header.contact') %></span>
          <% end %>

        </div>
      </nav>

      <!-- Social media links -->
      <% if @socials.any? %>
        <div class="mt-4 pt-8 border-t border-rope-600/30">
          <div class="flex justify-center gap-x-6">
            <%= render partial: "layouts/footer_socials", collection: @socials %>
          </div>
        </div>
      <% end %>

      <!-- Auth buttons -->
      <% if Flipper.enabled?(:user_sign_in) %>
        <div class="mt-8 pt-8 border-t border-rope-600/30 flex flex-col gap-3">
          <% if user_signed_in? %>
            <%= link_to t('header.sign_out'), destroy_user_session_path, class: "btn btn-primary w-full text-lg py-4 rounded-xl shadow-lg hover:shadow-rope-600/20" %>
          <% else %>
            <%= link_to t('header.sign_in'), new_user_session_path, class: "btn btn-primary w-full text-lg py-4 rounded-xl shadow-lg hover:shadow-rope-600/20" %>
            <%= link_to t('header.sign_up'), new_user_registration_path, class: "btn btn-secondary w-full text-lg py-4 rounded-xl shadow-lg" %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</header>
