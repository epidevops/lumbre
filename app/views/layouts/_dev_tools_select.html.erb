<div class="relative text-left" data-controller="toggle">
  <div>
    <%= button_tag class: "inline-flex w-full justify-center items-center gap-x-1.5 rounded-md bg-transparent px-3 py-1 text-sm/6 cursor-pointer font-semibold text-white shadow-xs ring-1 ring-gray-300 ring-inset", id: "dev-tool-button", aria: { expanded: "false" }, data: { action: 'toggle#toggleDropdown', toggle_target: 'dropdownButton' } do %>
      <%= heroicon("cog-8-tooth", class: "size-5 text-gray-400") %>
      <%= "Dev Tools" %>
      <%= heroicon("chevron-down", class: "size-5 text-gray-400") %>
    <% end %>
  </div>

  <div class="absolute right-0 z-10 w-48 gap-x-4 px-4 mt-2 origin-top-right divide-y divide-gray-100 rounded-md bg-white shadow-lg ring-1 ring-black/5 focus:outline-hidden hidden" role="menu" aria-orientation="vertical" aria-labelledby="dev-tool-button" tabindex="-1" data-toggle-target="dropdownMenu">
    <div class="py-1" role="none">
      <%= link_to mount_solid_litequeen_path,
                  id: "dev-tool-button-0",
                  class: "group flex items-center px-2.5 py-1 text-sm/6 text-gray-700 hover:bg-gray-100",
                  target: '_blank',
                  role: "menuitem",
                  tabindex: "-1",
                  data: { action: 'toggle#toggleDropdownItem' } do %>
        <%= heroicon("circle-stack", class: "mr-4 size-5 text-gray-400") %>
        <%= "Litequeen" %>
      <% end %>
      <%= link_to mount_mission_control_jobs_path,
                  id: "dev-tool-button-1",
                  class: "group flex items-center px-2.5 py-1 text-sm/6 text-gray-700 hover:bg-gray-100",
                  target: '_blank',
                  role: "menuitem",
                  tabindex: "-1",
                  data: { action: 'toggle#toggleDropdownItem' } do %>
        <%= heroicon("rocket-launch", class: "mr-4 size-5 text-gray-400") %>
        <%= "Jobs" %>
      <% end %>
      <%= link_to mount_letter_opener_web_path,
                  id: "dev-tool-button-2",
                  class: "group flex items-center px-2.5 py-1 text-sm/6 text-gray-700 hover:bg-gray-100",
                  target: '_blank',
                  role: "menuitem",
                  tabindex: "-1",
                  data: { action: 'toggle#toggleDropdownItem' } do %>
        <%= heroicon("envelope", class: "mr-4 size-5 text-gray-400") %>
        <%= "Letter Opener" %>
      <% end %>
    </div>
  </div>
</div>


