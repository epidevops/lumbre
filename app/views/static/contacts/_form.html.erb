<%= form_with(model: contact, url: static_contacts_path, method: :post, local: false, id: "contact_form", data: { turbo: "true" }) do |f| %>
  <div class="mx-auto max-w-xl px-4 lg:px-0 lg:mr-0 lg:max-w-lg">
    <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
      <div class="sm:col-span-2">
        <label for="email" class="block text-sm font-semibold text-siam-900"><%= t('contact.form.email.label') %></label>
        <div class="mt-2.5">
          <%= f.email_field :email, autocomplete: "email", class: "block w-full rounded-md bg-white px-3.5 py-2 text-base text-siam-900 outline-1 -outline-offset-1 outline-siam-300 placeholder:text-siam-400 focus:outline-2 focus:-outline-offset-2 focus:outline-siam-600 transition-colors", required: true, placeholder: t('contact.form.email.placeholder') %>
        </div>
      </div>
      <div class="sm:col-span-2">
        <label for="contact_message" class="block text-sm font-semibold text-siam-900"><%= t('contact.form.message.label') %></label>
        <div class="mt-2.5">
          <%= f.fields_for :contact_messages, contact.contact_messages.build do |message_form| %>
            <%= message_form.text_area :message, rows: 4, maxlength: 5000, class: "block w-full rounded-md bg-white px-3.5 py-2 text-base text-siam-900 outline-1 -outline-offset-1 outline-siam-300 placeholder:text-siam-400 focus:outline-2 focus:-outline-offset-2 focus:outline-siam-600 transition-colors", required: true, placeholder: t('contact.form.message.placeholder') %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="mt-8 flex justify-center">
      <%= f.submit t('contact.form.submit'), class: "btn btn-primary w-full" %>
    </div>
  </div>
<% end %>
