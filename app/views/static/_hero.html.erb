<!-- Hero section -->
<div class="bg-siam-950 h-dvh">
  <div class="relative isolate overflow-hidden h-dvh flex flex-col items-center justify-center">
    <%= video_tag 'lumbreyhumo.mp4', autoplay: true, loop: true, muted: true, type: 'video/mp4', class: 'absolute inset-0 -z-10 size-full object-cover opacity-70' %>

    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <!-- Main logo - visible on all screens, animated -->
        <img
          src="<%= image_path('logos/LOGO BLANCO Y VERDE.png') %>"
          alt="Lumbre Logo"
          class="mx-auto w-full max-w-md animate-fade-in-up"
        />
      </div>
    </div>
  </div>
</div>